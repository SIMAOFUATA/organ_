<%- include ("../../partials/patient/head") %>
            

<%- include ("../../partials/admin/leftSide") %>

            <div class="col-10 right-section" style="overflow:auto;">
                <a href="/doctor/new" class="btn btn-main">Novo Doctor</a>
                <div class="col resumo pb-5 text-center">
                    <div class="row">
                        <div class="col p-3">
                            <form action="#" class="pd-2 g-5 d-flex align-items-center">
                                <input type="search" list="tipo"
                                    class="inputDate p-3 rounded-pill bg-light mb-2 form-control" id="nomePaciente"
                                    placeholder="procurar...">
                                <button type="submit" class="border-0 btn btn-main rounded-pill mb-2"><i
                                        class="fas fa-search"></i></button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Id</th>
                                <th scope="col">Nome</th>
                                <th scope="col">Especialidade</th>
                                <th scope="col">User</th>
                                <th scope="col">Email</th>
                                <th scope="col">Contacto</th>
                                <th scope="col">Acção</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% d.forEach(d =>{ %>
                                <tr>
                                    <td><%- d.idMedico %> </td>
                                    <td><%- d.nomeMedico %> </td>
                                    <td><%- d.nomeEspecialidade %> </td>
                                    <td><%- d.userMedico %> </td>
                                    <td><%- d.emailMedico %> </td>
                                    <td><%- d.tellMedico %> </td>
                                    <th>
                                        <div class="d-flex justify-content-center align-items-center">
                                            <a href="/admin/schedule/edit" class=""><i style="font-size: 20px;" class="text-dark px-1 bi bi-eye"></i></a>
                                            <a href="/admin/schedule/edit" class=""><i style="font-size: 20px;" class="text-dark px-1 bi bi-arrow-clockwise"></i></a>
                                            <form action="/schedule/delete" method="post" onsubmit="deletarSchedule(event, this)">
                                                <input type="hidden" name="id">
                                                <a href="#" style="color: #ff1A40   ;"><i class="px-1 bi bi-calendar-x"></i></a>
                                            </form>
                                        </div>
                                    </th>
                                </tr>
                            <% }) %>  
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </header>

<script>
    function confirmDelete(event, form){
        event.preventDefault()
        var decision = confirm("Quer deletar este dado?")
        if(decision){
            form.submit()
        }
    }
</script>

</body>
</html>